<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/main_theme">

        <com.fenjuly.library.ArrowDownloadButton
            android:id="@+id/adb_check"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"/>

    </FrameLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        app:mrl_rippleAlpha="0.5"
        android:background="@drawable/shape_bg_theme_btn"
        app:mrl_rippleBackground="@color/white"
        app:mrl_rippleColor="@color/grey_bg">

        <TextView
            android:id="@+id/tv_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="诊断网络"
            android:textColor="@color/main_theme"
            android:textSize="22sp"/>

    </com.balysv.materialripple.MaterialRippleLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="页面打不开？请点击诊断按钮"
        android:textColor="@color/grey"
        android:textSize="16sp"/>

    <View style="@style/hr_line"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/tv_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="当前网络：未测试"
        android:textColor="@color/grey"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="WIFI网络：未测试"
        android:textColor="@color/grey"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="移动网络：未测试"
        android:textColor="@color/grey"
        android:textSize="16sp"/>

    <View style="@style/hr_line"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="网络连接状态：未测试"
        android:textColor="@color/grey"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="连接测试：未测试"
        android:textColor="@color/grey"
        android:textSize="16sp"/>

</LinearLayout>