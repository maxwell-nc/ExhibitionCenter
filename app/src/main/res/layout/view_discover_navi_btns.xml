<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:weightSum="4">

        <com.balysv.materialripple.MaterialRippleLayout
            style="@style/discover_btn_effect">

            <TextView
                android:id="@+id/tv_business"
                style="@style/discover_btn"
                android:drawableTop="@mipmap/icon_business"
                android:text="商务中心"/>

        </com.balysv.materialripple.MaterialRippleLayout>


        <com.balysv.materialripple.MaterialRippleLayout
            style="@style/discover_btn_effect">

            <TextView
                android:id="@+id/tv_bank"
                style="@style/discover_btn"
                android:drawableTop="@mipmap/icon_bank"
                android:text="银行"/>

        </com.balysv.materialripple.MaterialRippleLayout>


        <com.balysv.materialripple.MaterialRippleLayout
            style="@style/discover_btn_effect">

            <TextView
                android:id="@+id/tv_hotel"
                style="@style/discover_btn"
                android:drawableTop="@mipmap/icon_hotel"
                android:text="酒店"/>

        </com.balysv.materialripple.MaterialRippleLayout>


        <com.balysv.materialripple.MaterialRippleLayout
            style="@style/discover_btn_effect">

            <TextView
                android:id="@+id/tv_travel"
                style="@style/discover_btn"
                android:drawableTop="@mipmap/icon_travel"
                android:text="旅游"/>

        </com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:weightSum="4">

        <com.balysv.materialripple.MaterialRippleLayout
            style="@style/discover_btn_effect">

            <TextView
                android:id="@+id/tv_food"
                style="@style/discover_btn"
                android:drawableTop="@mipmap/icon_food"
                android:text="餐饮"/>
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            style="@style/discover_btn_effect">

            <TextView
                android:id="@+id/tv_transportation"
                style="@style/discover_btn"
                android:drawableTop="@mipmap/icon_transportation"
                android:text="海关"/>
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            style="@style/discover_btn_effect">

            <TextView
                android:id="@+id/tv_shop"
                style="@style/discover_btn"
                android:drawableTop="@mipmap/icon_shop"
                android:text="购物"/>
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            style="@style/discover_btn_effect">

            <TextView
                android:id="@+id/tv_help"
                style="@style/discover_btn"
                android:drawableTop="@mipmap/icon_help"
                android:text="求救单位"/>
        </com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>
</merge>